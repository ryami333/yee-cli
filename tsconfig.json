{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "exclude": ["node_modules", "**/.*"]
}
